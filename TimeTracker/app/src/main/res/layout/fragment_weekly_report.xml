<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeeklyReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_weekly"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="serif"
            android:text="@string/title_weekly_report"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/report_title_size" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginBottom="@dimen/divider_margin_bottom"
            android:background="?android:attr/listDivider"
            android:textAlignment="center" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/w_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_margin="10dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/w_bar_chart_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_margin="10dp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:background="?android:attr/listDivider" />

                <Spinner
                    android:id="@+id/w_spinner_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/w_bar_chart_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_margin="10dp" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:background="?android:attr/listDivider" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>